<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Student| Attendance</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  <%- include('./nav.ejs') %>
  <style>
    .circle-box {
      width: 30px;
      height: 30px;
      border-radius: 50%;
      color: #fff;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .bg-success {
      background-color: green;
    }

    .bg-danger {
      background-color: red;
    }

    .bg-secondary {
      background-color: grey;
    }
  </style>
</head>

<body>
  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-md-10 text-center">
        <h1>View Attendance</h1>
        <hr class="my-4 border-4">
      </div>
    </div>
  </div>
  <div class="container mt-3">
    <div class="row">
      <div class="col-md-12">
        <h5>Student Name: <%= templateData.studentName %></h5>
        <h5>Roll No: <%= templateData.rollNo %></h5>
      </div>
    </div>

    <div class="row mt-4">
      <div class="col-md-3 mb-3">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">Total Days</h5>
            <p class="card-text"><%= templateData.totalCount %></p>
          </div>
        </div>
      </div>
      <div class="col-md-3 mb-3">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">Days Present</h5>
            <p class="card-text"><%= templateData.presentCount %></p>
          </div>
        </div>
      </div>
      <div class="col-md-3 mb-3">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">Days Absent</h5>
            <p class="card-text"><%= templateData.absentCount %></p>
          </div>
        </div>
      </div>
      <div class="col-md-3 mb-3">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">Days Leaves</h5>
            <p class="card-text"><%= templateData.leaveCount %></p>
          </div>
        </div>
      </div>
      <div class="col-md-3 mb-3">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">Percentage</h5>
            <p class="card-text"><%= templateData.percentage %></p>
          </div>
        </div>
      </div>
    </div>

    <div class="container mt-3">
      <div class="row justify-content-center">
        <div class="col-md-10 text-center">
          <h2>Attendance History</h2>
        </div>
      </div>
    </div>

    <div class="row mt-3 mb-4">
      <div class="col-md-12">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Date</th>
              <th>Status</th>
            </tr>
          </thead>
          <tbody>
            <% for (let index = 0; index < templateData.status.length; index++) { %>
            <tr>
              <td><%= templateData.status[index].date %></td>
              <td>
                <% const status = templateData.status[index].status; %>
                <% if (status === 'present') { %>
                <div class="circle-box bg-success">P</div>
                <% } else if (status === 'absent') { %>
                <div class="circle-box bg-danger">A</div>
                <% } else if (status === 'leave') { %>
                <div class="circle-box bg-secondary">L</div>
                <% } %>
              </td>
            </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</body>

</html>