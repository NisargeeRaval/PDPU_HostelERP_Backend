<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Validate Student</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
  <%- include('./nav.ejs') %>
</head>

<body>
  <div class="container mt-5">
    <div class="row">
      <div class="col">
        <% if (Array.isArray(student) && student.length === 0) { %>
        <div class="container">
          <div class="alert alert-info custom-alert" role="alert">
            All student are validated!
          </div>
        </div>
        <% } else {%>
        <% student.forEach(function(student) { %>
        <div class="card mb-3" id="<%= student._id %>">
          <div class="card-body">
            <div class="row">
              <div class="col-9 d-flex align-items-center">
                <h5 class="card-title">
                  <%= student.firstname + " " + student.lastname + " (" + student.rollno + ")" %>
                </h5>
              </div>
              <div class="col-3 text-end">
                <i class="fa-solid fa-circle-check fa-2xl me-3" style="color: #1bbe25; cursor: pointer;" onclick="verifyStudent('<%= student._id %>', 'true')"></i>
                <i class="fa-solid fa-circle-xmark fa-2xl me-3" style="color: #db1515; cursor: pointer;" onclick="verifyStudent('<%= student._id %>', 'block')"></i>
                <i class="fa-solid fa-chevron-down fa-2xl" style="cursor: pointer;" onclick="toggleDetails(this)"></i>
              </div>
              <div class="details" style="display: none;">
                <!-- Student Details -->
                <p class="card-text">Email: <%= student.email %></p>
                <p class="card-text">Mobile Number: <%= student.mobileno %></p>
                <p class="card-text">Parent's Mobile Number: <%= student.parentsmobile %></p>
                <p class="card-text">Address: <%= student.address %></p>

                <!-- Student Proof Images -->
                <div class="row">
                  <% student.proof.forEach(function(image, index) { %>
                  <div class="col-md-6">
                    <img src="<%= image %>" alt="<%= image %>" class="img-thumbnail">
                  </div>
                  <% if (index % 2 === 1) { %>
                </div>
                <div class="row">
                  <% } %>
                  <% }); %>
                </div>
              </div>
            </div>
          </div>

        </div>
        <%});} %>
      </div>
    </div>
  </div>


  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-R0G6pqVhY5H0f2un3ibFKK5F0qtAp9oFFH0d1vjoUOFQgptvR3Yb9pf22ZnCFT33" crossorigin="anonymous"></script>

  <script>
    function toggleDetails(button) {
      const card = button.closest('.card');
      const details = card.querySelector('.details');
      details.style.display = details.style.display === 'none' ? 'block' : 'none';
    }

    async function verifyStudent(studentId, status) {
      try {
        const response = await fetch('/admin/api/verifyStudent', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({
            studentId: studentId,
            status: status,
          }),
        });

        console.log(response);

        if (response.ok) {
          const card = document.getElementById(studentId);
          console.log(card);
          if (card) {
            card.parentNode.removeChild(card);
          }
        } else {
          console.error('Request failed:', response);
        }
      } catch (error) {
        console.error('Request failed:', error);
      }
    }
  </script>

</body>

</html>