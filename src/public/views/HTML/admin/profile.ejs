<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin| Profile</title>
  <!-- Link to Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  <%- include('./nav.ejs') %>
</head>

<body>
  <div class="container mt-5">
    <div class="row mb-4">
      <div class="col-md-4">
        <img src="<%= admin.photo %>" alt="Admin Profile" class="img-fluid rounded-circle" style="max-width: 100%;">
      </div>
      <div class="col-md-8">
        <form id="adminForm" action="/admin/updateProfile" method="POST">
          <div class="mb-3">
            <label for="_id" class="form-label">_id:</label>
            <input type="text" class="form-control" name="_id" value="<%= admin._id %>" readonly>
          </div>
          <div class="mb-3">
            <label for="name" class="form-label">Admin Name:</label>
            <input type="text" class="form-control" name="name" value="<%= admin.name %>" readonly>
          </div>
          <div class="mb-3">
            <label for="email" class="form-label">Email:</label>
            <input type="text" class="form-control" name="email" value="<%= admin.email %>" readonly>
          </div>
          <div class="mb-3">
            <label for="phone" class="form-label">Mobile Number:</label>
            <input type="text" class="form-control" name="phone" value="<%= admin.phone %>" readonly>
          </div>

          <!-- Edit button to toggle read-only mode and show submit button -->
          <button type="button" class="btn btn-primary" onclick="toggleEditMode()" id="editButton" style="display: block">Edit</button>

          <!-- Submit button to save changes (initially hidden) -->
          <button type="submit" class="btn btn-success" id="submitButton" style="display: none">Submit</button>
        </form>
      </div>
    </div>
  </div>

  <script>
    function toggleEditMode() {
      const form = document.getElementById('adminForm');
      const inputs = form.getElementsByTagName('input');
      const submitButton = document.getElementById('submitButton');
      const editButton = document.getElementById('editButton');

      for (let i = 0; i < inputs.length; i++) {
        if (inputs[i].name === 'email' || inputs[i].name === 'phone') {
          inputs[i].readOnly = false;
        } else {
          inputs[i].readOnly = true;
        }
      }

      // Toggle the visibility of the submit button
      submitButton.style.display = 'block';
      editButton.style.display = 'none';
    }
  </script>

</body>

</html>