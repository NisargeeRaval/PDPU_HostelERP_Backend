<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
  <title>Document</title>
  <%- include('./nav.ejs') %>
</head>

<body>
  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-md-10 text-center">
        <h1>Add Warden</h1>
        <hr class="my-4 border-4"> <!-- Use 'border-4' to make the line thicker -->
      </div>
    </div>
  </div>
  <div class="container mb-5">
    <form action="/warden/api/register" method="post" enctype="multipart/form-data">
      <div class="mb-3">
        <label for="wardenName" class="form-label">Warden Name</label>
        <input type="text" class="form-control" name="wardenName" required>
      </div>
      <div class="mb-3">
        <label for="photo" class="form-label">Photo</label>
        <input type="file" class="form-control" name="wardenPhoto" required>
      </div>
      <div class="mb-3">
        <label for="hostels" class="form-label">Hostels</label>
        <select class="form-select" name="hostel" required>
          <!-- <option selected>Select Hostel</option> -->
          <% hostel.forEach(function(hostel) { %>
          <option value="<%= hostel._id %>"><%= hostel.hostelName %></option>
          <% }); %>
        </select>
      </div>
      <div class="mb-3">
        <label for="mobile" class="form-label">Mobile Number</label>
        <input type="text" class="form-control" name="mobile" required>
      </div>
      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="email" class="form-control" name="email" required>
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input type="password" class="form-control" name="password" required>
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
  </div>
</body>

</html>