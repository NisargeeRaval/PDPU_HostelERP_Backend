<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
  <title>Hostel Layout</title>
</head>

<body>
  <div class="container mt-5">
    <h1 class="text-center">Hostel Layout</h1>
    <div class="d-flex flex-wrap">
      <!-- Loop through floors -->
      <% for (let floor = 1; floor <= 10; floor++) { %>
      <!-- Initialize room numbers for each floor -->
      <% let roomNumber = 1; %>
      <div class="floor-box col-12 d-flex justify-content-between">
        <div class="d-flex align-items-center">
          <div>
            Floor <%= floor %>
          </div>
          <span class="circle green bg-success">10</span>
          <span class="circle red bg-danger">10</span>
        </div>
        <div>
          <i class="fa-solid fa-chevron-down fa-2xl toggle-button" style="cursor: pointer;" onclick="toggleDetails(this)"></i>
        </div>
      </div>
      <div class="floor-details collapse" id="floor<%= floor %>">
        <div class="d-flex flex-wrap">
          <!-- Loop through rooms on the current floor -->
          <% for (let room = 1; room <= 20; room++) { %>
          <a class="room-box btn btn-light" href="#">
            <div class="room-details">
              <!-- Display number of empty beds all the time -->
              Room <%= floor * 100 + roomNumber % 100 %>
              <span class="circle blue bg-primary">3</span>
            </div>
          </a>
          <!-- Increment room number for the next room -->
          <% roomNumber++; %>
          <% } %>
        </div>
      </div>
      <% } %>
    </div>
  </div>
  <style>
    .floor-box {
      border: 1px solid #000;
      margin: 20px;
      padding: 10px;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .circle {
      display: inline-block;
      width: 40px;
      height: 40px;
      border-radius: 50%;
      text-align: center;
      font-size: 16px;
      line-height: 40px;
      margin-left: 10px;
      /* Adjust margin as needed */
    }

    .floor-details {
      margin-bottom: 20px;
      flex-wrap: wrap;
    }

    .room-box {
      margin: 10px;
      transition: background-color 0.3s, transform 0.3s;
      border: 1px solid transparent;
    }

    .room-box:hover {
      background-color: #f0f0f0;
      transform: scale(1.1);
      border: 1px solid #000;
    }
  </style>
  <script>
    function toggleDetails(button) {
      const floorDetails = button.closest('.floor-box').nextElementSibling;
      floorDetails.classList.toggle('show');
    }
  </script>
</body>

</html>