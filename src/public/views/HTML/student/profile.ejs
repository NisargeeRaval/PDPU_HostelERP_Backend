<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Student| Profile</title>
  <!-- Link to Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  <%- include('./nav.ejs') %>
</head>

<body>
  <div class="container mt-5">
    <div class="row mb-4">
      <div class="col-md-4">
        <img src="<%= student.profile %>" alt="Student Profile" class="img-fluid rounded-circle" style="max-width: 100%;">
      </div>
      <div class="col-md-8">
        <form id="adminForm" action="/student/updateProfile" method="POST">
          <div class="mb-3">
            <label for="_id" class="form-label">_id:</label>
            <input type="text" class="form-control" name="_id" value="<%= student._id %>" readonly>
          </div>
          <div class="mb-3">
            <label for="firstname" class="form-label">Student First Name:</label>
            <input type="text" class="form-control" name="firstname" value="<%= student.firstname %>" readonly>
          </div>
          <div class="mb-3">
            <label for="lastname" class="form-label">Student Last Name:</label>
            <input type="text" class="form-control" name="lastname" value="<%= student.lastname %>" readonly>
          </div>
          <div class="mb-3">
            <label for="email" class="form-label">Email:</label>
            <input type="text" class="form-control" name="email" value="<%= student.email %>" readonly>
          </div>
          <div class="mb-3">
            <label for="rollno" class="form-label">Roll Number:</label>
            <input type="text" class="form-control" name="rollno" value="<%= student.rollno %>" readonly>
          </div>
          <div class="mb-3">
            <label for="mobileno" class="form-label">Mobile Number:</label>
            <input type="text" class="form-control" name="mobileno" value="<%= student.mobileno %>" readonly pattern="[0-9]{10,}" title="Please enter a valid mobile number with a minimum length of 10 digits">
          </div>
          <div class="mb-3">
            <label for="parentsname" class="form-label">Parent's Name:</label>
            <input type="text" class="form-control" name="parentsname" value="<%= student.parentsname %>" readonly>
          </div>
          <div class="mb-3">
            <label for="address" class="form-label">Address:</label>
            <input type="text" class="form-control" name="address" value="<%= student.address %>" readonly>
          </div>
          <div class="mb-3">
            <label for="enrolled" class="form-label">Hostel Enrollnment:</label>
            <input type="text" class="form-control" name="enrolled" value="<%= student.enrolled %>" readonly>
          </div>
          <div class="mb-3">
            <label for="onLeave" class="form-label">On Leave:</label>
            <input type="text" class="form-control" name="onLeave" value="<%= student.onLeave %>" readonly>
          </div>


          <!-- Edit button to toggle read-only mode and show submit button -->
          <button type="button" class="btn btn-primary" onclick="toggleEditMode()" id="editButton" style="display: block">Edit</button>

          <!-- Submit button to save changes (initially hidden) -->
          <button type="submit" class="btn btn-success" id="submitButton" style="display: none">Submit</button>
        </form>
      </div>
    </div>
  </div>

  <script>
    function toggleEditMode() {
      const form = document.getElementById('adminForm');
      const inputs = form.getElementsByTagName('input');
      const submitButton = document.getElementById('submitButton');
      const editButton = document.getElementById('editButton');

      for (let i = 0; i < inputs.length; i++) {
        if (inputs[i].name === 'mobileno' || inputs[i].name === 'address') {
          inputs[i].readOnly = false;
        } else {
          inputs[i].readOnly = true;
        }
      }

      // Toggle the visibility of the submit button
      submitButton.style.display = 'block';
      editButton.style.display = 'none';
    }
  </script>

</body>

</html>